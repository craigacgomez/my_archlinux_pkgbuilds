pkgname=openprinting-ppds-pxlcolor-lanier
pkgver=20161206
pkgrel=1
pkgdesc="PPD files for Lanier's PCL XL color printers, supplied by Ricoh"
arch=('any')
url="http://www.openprinting.org/driver/pxlcolor-Lanier"
license=('MIT')
depends=('cups'
         'cups-filters'
         'ghostscript')
source=("https://www.openprinting.org/download/printdriver/components/lsb3.2/main/RPMS/noarch/${pkgname}-${pkgver}-1lsb3.2.noarch.rpm")
install="${pkgname}.install"
sha256sums=('27b68a6543f0eab66b3189239fb0b19a54db91ec7ca7c96f6325830761f452b1')

package() {
    install -dm755 "${pkgdir}/usr/share/cups/model"
    install -dm755 "${pkgdir}/opt/OpenPrinting-Ricoh/doc/${pkgname}"
    install -Dm644 "${srcdir}/opt/OpenPrinting-Ricoh/ppds/LANIER"/* "${pkgdir}/usr/share/cups/model"
    install -Dm644 "${srcdir}/opt/OpenPrinting-Ricoh/ppds/Lanier"/* "${pkgdir}/usr/share/cups/model"
    install -Dm644 "${srcdir}/opt/OpenPrinting-Ricoh/doc/${pkgname}"/* "${pkgdir}/opt/OpenPrinting-Ricoh/doc/${pkgname}"
}
