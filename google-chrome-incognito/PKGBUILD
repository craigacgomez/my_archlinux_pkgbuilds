pkgname=google-chrome-incognito
pkgver=1.0
pkgrel=1
pkgdesc="Opens Google Chrome in incognito mode by default"
arch=('any')
url="https://www.google.com/chrome/"
license=('BSD')
source=("${pkgname}")
depends=('google-chrome')
sha256sums=('99fe9b9e943834e38e7607b7e1bc40971572797479c0617cba906e2202188d31')

package() {
    install -dm755 "${pkgdir}/usr/local/bin"
    install -Dm755 "${pkgname}" "${pkgdir}/usr/local/bin/google-chrome-stable"
}
