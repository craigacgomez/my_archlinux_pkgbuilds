pkgname=chromium-incognito
pkgver=1.0
pkgrel=1
pkgdesc="Opens Chromium in incognito mode by default"
arch=('any')
url="https://www.chromium.org/"
license=('BSD')
source=("${pkgname}")
depends=('chromium')
sha256sums=('38638383d26a65eaabd2ef050ecdee90eddbc8640d9e472890be4814061cbcbd')

package() {
    install -dm755 "${pkgdir}/usr/local/bin"
    install -Dm755 "${pkgname}" "${pkgdir}/usr/local/bin/chromium"
}
