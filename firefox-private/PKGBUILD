pkgname=firefox-private
pkgver=1.0
pkgrel=1
pkgdesc="Opens Firefox in private browsing mode by default"
arch=('any')
url="https://www.mozilla.org/firefox/products/"
license=('MPL')
source=("${pkgname}")
depends=('firefox')
sha256sums=('2307646b52b70119ea80edf150e96a19516d75e0a892e926fbb81dea7fcd71e1')

package() {
    install -dm755 "${pkgdir}/usr/local/bin"
    install -Dm755 "${pkgname}" "${pkgdir}/usr/local/bin/firefox"
}
